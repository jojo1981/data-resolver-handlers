{
  "name": "jojo1981/data-resolver-handlers",
  "description": "Handlers for the data resolver",
  "keywords": [
    "data",
    "resolver",
    "handler",
    "handlers",
    "doctrine"
  ],
  "type": "library",
  "license": "MIT",
  "readme": "README.md",
  "authors": [
    {
      "name": "Joost Nijhuis",
      "email": "jnijhuis81@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.3|^8.4|^8.5",
    "doctrine/collections": "^1.6",
    "jojo1981/data-resolver": "^3.0",
    "jojo1981/typed-collection": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "Jojo1981\\DataResolverHandlers\\": "src/"
    }
  },
  "require-dev": {
    "ext-json": "*",
    "dg/bypass-finals": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpunit/phpunit": "^12.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\Jojo1981\\DataResolverHandlers\\": "tests/"
    }
  },
  "config": {
    "bin-dir": "bin",
    "sort-packages": true
  },
  "scripts": {
    "test": "bin/phpunit",
    "cs-fix": [
      "bin/php-cs-fixer fix ./src --rules=@PSR2 --using-cache=no",
      "bin/php-cs-fixer fix ./tests --rules=@PSR2 --using-cache=no"
    ],
    "cs-check": [
      "bin/php-cs-fixer fix ./src --dry-run --diff --diff-format=udiff --rules=@PSR2 --using-cache=no",
      "bin/php-cs-fixer fix ./tests --dry-run --diff --diff-format=udiff --rules=@PSR2 --using-cache=no"
    ]
  }
}
